/*Aqui pode testar qualquer determinante de qualquer tamanho,
so mudar o módulo de determinante para o tamanho desejado
:) S2
*/

//AVISO!!! USAR A RAM 1-PORT PARA 256BITS DE ENTRADA E SAÍDA!!!!

module dinossauro (
	input wire rst, 
	input wire sw,
	input wire clk,
	output reg [7:0] leds
);

	reg [7:0] address = 0;
	reg clk2;
	reg clk3;
	
	reg [199:0] matriz_A;
	wire [31:0] det;
	
	reg read_finished = 0;
	reg write_enable = 0;
	
	reg [24:0] counter = 0;
	reg [24:0] counter2 = 0;
	reg[7:0] count = 0;
	
	wire [255:0] data;

	RamGigante (
	  address,
	  clk,
	  det,
	  write_enable,
	  data
	);
	
	matriz_determ5x5 (
	  matriz_A,
	  det
	);
   
	always @(posedge clk) begin
	  if (counter == 25'd24_999_999) begin  
			counter <= 0;
			clk2 <= 1;
	  end else begin
			counter <= counter + 1;
			clk2 <= 0;
	  end
	end

	always @(posedge clk) begin
		  if (counter2 == 3) begin  
				counter2 <= 0;
				clk3 <= 1;
		  end else begin
				counter2 <= counter2 + 1;
				clk3 <= 0;
		  end
	 end


    always @(posedge clk3) begin
		if (sw) begin  
		  case (count)
				0: begin
					 count <= count + 1;
				end
				1: begin
					 matriz_A <= data; // Bota a matriz A no registrador
					 count <= count + 1;
				end
				2: begin
					 address <= 1;
					 count <= count + 1;
				end
				3: begin
					 write_enable <= 1;//Habilita escrita do resultado do determinante da matriz A no endereço 1
					 count <= count + 1;
				end
				4: begin
					 count <= count + 1;
				end
				5: begin
					 count <= count + 1;
				end
				6: begin
					 write_enable <= 0; 
					 read_finished <= 1;
				end
				endcase
		  end
	 end

    always @(posedge clk2) begin
        if (read_finished) begin
            leds <= data[7:0]; //Aparece o valor do determinante :)
        end
    end

endmodule

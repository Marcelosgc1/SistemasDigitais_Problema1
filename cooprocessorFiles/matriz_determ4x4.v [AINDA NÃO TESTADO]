module matriz_determ4x4 (
    input wire [199:0] matriz_A,
    input clk,
    output reg [31:0] det
);

    reg [7:0] mat [3:0][3:0]; 
    reg [31:0] tp [3:0];
    integer i, j;
    reg [4:0] count = 0;

    function [31:0] det_3x3;
        input [7:0] a, b, c, d, e, f, g, h, i;
        begin
            det_3x3 = a * (e * i - f * h) -
                      b * (d * i - f * g) +
                      c * (d * h - e * g);
        end
    endfunction

    always @(posedge clk) begin
        for (i = 0; i < 4; i = i + 1)
            for (j = 0; j < 4; j = j + 1)
                mat[i][j] = matriz_A[(i * 32) + (j * 8) +: 8];

        if (count < 4) begin
            tp[count] = mat[0][count] * det_3x3(
                mat[1][(count+1)%4], mat[1][(count+2)%4], mat[1][(count+3)%4],
                mat[2][(count+1)%4], mat[2][(count+2)%4], mat[2][(count+3)%4],
                mat[3][(count+1)%4], mat[3][(count+2)%4], mat[3][(count+3)%4]
            );
        end else begin
            det = tp[0] - tp[1] + tp[2] - tp[3];
        end

        count <= count + 1;
    end
endmodule
